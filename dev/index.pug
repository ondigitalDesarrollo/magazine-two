doctype html
html(lang="es")
head
	meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
	meta(charset="UTF-8")
	title Revista Prototipo Dos
	link(rel="stylesheet", href="icons/foundation-icons.css")
	link(rel="stylesheet", href="css/foundation-flex.css")
	link(rel="stylesheet", href="css/styles.css")
body
	//- Header
	header
		//- Social
		section#social
			.row.align-center.text-center
				.small-2.columns
					a(href="#" title="facebook")
						i.fi-social-facebook
				.small-2.columns
					a(href="#" title="twitter")
						i.fi-social-twitter
				.small-2.columns
					a(href="#" title="instagram")
						i.fi-social-instagram
				.small-2.columns
					a(href="#" title="youtube")
						i.fi-social-youtube
				.small-2.columns
					a(href="#" title="flickr")
						i.fi-social-flickr
			//- Logo
		section#logo
			article.callout
				.row.align-center.text-center
					.columns.small-6
						figure
							img(src="img/irotama.png", alt="Irotama Logo")
					.columns.small-6
						hgroup.text-left
							h1 Revista Mensual
							h3
								small Irotama Hoteles
	//- Main
	main#main
	//- Footer
	footer#footer
	script(src="js/vendor/jquery.js")
	script(src="js/vendor/foundation.min.js")
	script(src="js/app.js")



	
	